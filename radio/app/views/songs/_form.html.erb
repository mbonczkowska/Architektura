<%= simple_form_for(@song) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tag_list, :label => "Tags (separated by spaces)" %>
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :album %>
    <%= f.input :year %>
    <%= f.input :length %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
